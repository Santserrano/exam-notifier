{
    "name": "express-backend",
    "version": "1.0.0",
    "description": "Backend Express",
    "type": "module",
    "main": "dist/index.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development EXPRESS_PORT=3001 node --loader ts-node/esm src/index.ts",
        "dev:debug": "cross-env NODE_ENV=development node --loader ts-node/esm --inspect src/index.ts",
        "prisma:generate": "prisma generate --schema=../../packages/database/prisma/schema.prisma",
        "build": "pnpm install && pnpm prisma:generate && tsup src/index.ts --format esm,cjs --dts --clean && tsc --emitDeclarationOnly --skipLibCheck",
        "start": "node --experimental-specifier-resolution=node -r dotenv/config dist/index.js",
        "start:prod": "node --experimental-specifier-resolution=node dist/index.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "lint:fix:watch": "nodemon --watch src --ext ts --exec \"pnpm run lint:fix\"",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@exam-notifier/tsconfig": "workspace:*",
        "@prisma/client": "^5.10.0",
        "@supabase/supabase-js": "^2.39.0",
        "axios": "^1.9.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.18.2",
        "redis": "^5.1.0",
        "resend": "^4.5.1",
        "supertest": "^7.1.1",
        "web-push": "^3.6.7"
    },
    "devDependencies": {
        "@babel/core": "^7.27.4",
        "@babel/preset-env": "^7.27.2",
        "@babel/preset-typescript": "^7.27.1",
        "@exam-notifier/eslint-config": "*",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/helmet": "^4.0.0",
        "@types/jest": "^29.5.12",
        "@types/morgan": "^1.9.10",
        "@types/node": "^20.11.19",
        "@types/supertest": "^2.0.16",
        "@typescript-eslint/eslint-plugin": "^6.0.0",
        "@typescript-eslint/parser": "^6.0.0",
        "babel-jest": "30.0.0-beta.3",
        "cross-env": "^7.0.3",
        "eslint": "^8.0.0",
        "jest": "^29.7.0",
        "nodemon": "^3.0.3",
        "prisma": "^5.10.0",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "tsup": "^8.0.2",
        "typescript": "5.4.2"
    }
}